class Solution:
    def findPeakElement(self, nums: List[int]) -> int:
        n=len(nums)
        l,h=1,n-2
        while l<=h:
            mid=l+(h-l)//2
            if nums[mid-1]<nums[mid]>nums[mid+1]:
                return mid
            if nums[mid-1]<nums[mid]:
                l=mid+1
            else:
                h=mid-1
        
 


