class Solution:
    def rearrangeArray(self, nums: List[int]) -> List[int]:  
        #Optimal
        n = len(nums)
        res=[0]*n
        posindx=0
        neindx=1
        for num in nums:
            if num>0:
                res[posindx]=num
                posindx+=2
            elif:
                res[neindx]=num
                neindx+=2
        for i in range(n):
            nums[i] = res[i]
        return nums 



