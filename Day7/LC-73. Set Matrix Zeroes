class Solution:
    def setZeroes(self, matrix: List[List[int]]) -> None:
        m, n = len(matrix), len(matrix[0])
        
        firstRowZero = False
        firstColZero = False

        # Step 1: Check if first row/col need zeroing
        for j in range(n):
            if matrix[0][j] == 0:
                firstRowZero = True
        for i in range(m):
            if matrix[i][0] == 0:
                firstColZero = True

        # Step 2: Use first row & col as markers
        for i in range(1, m):
            for j in range(1, n):
                if matrix[i][j] == 0:
                    matrix[i][0] = 0
                    matrix[0][j] = 0

        # Step 3: Zero out based on markers
        for i in range(1, m):
            for j in range(1, n):
                if matrix[i][0] == 0 or matrix[0][j] == 0:
                    matrix[i][j] = 0

        # Step 4: Handle first row & col sepaerately
        if firstRowZero:
            for j in range(n):
                matrix[0][j] = 0
        if firstColZero:
            for i in range(m):
                matrix[i][0] = 0









