#         result = [[0]*n for _ in range(n)]  # new matrix
        
#         for i in range(n):
#             for j in range(n):
#                 result[j][n-1-i] = matrix[i][j]
        
#         # copy back to original
#         for i in range(n):
#             for j in range(n):
#                 matrix[i][j] = result[i][j]


        
